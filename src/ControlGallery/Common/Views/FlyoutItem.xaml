<?xml version="1.0" encoding="utf-8" ?>
<Grid xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:mct="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:views="clr-namespace:ControlGallery.Common.Views"
             xmlns:b="clr-namespace:ControlGallery.Common.Behaviors"
             x:Class="ControlGallery.Common.Views.FlyoutItem"
             ColumnDefinitions="15,50,*">
        <Grid.Behaviors>
                <b:CursorBehavior/>
        </Grid.Behaviors>

        
        <Image Source="{Binding FlyoutIcon}"
                x:Name="ItemImage"
                Margin="5"
                HeightRequest="35"
                Grid.Column="1" />
        <Label Grid.Column="2"
                IsVisible="{Binding IsLabelVisible}"
                Text="{Binding Title}"
                FontAttributes="Italic"
                VerticalTextAlignment="Center" />
                
    
    
</Grid>