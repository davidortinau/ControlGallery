        <!--CornerRadius="8"-->
        <Grid Grid.Row="2" 
              RowDefinitions="*,Auto,Auto">

            <Border Stroke="{StaticResource Gray950Brush}"
                    StrokeShape="{RoundRectangle CornerRadius=0}"
                    StrokeThickness="1">
                <Grid
                    x:Name="ExampleContainer"
                    x:FieldModifier="Public"
                    Background="{StaticResource Gray100}"
                    RowDefinitions="*,Auto"
                    ColumnDefinitions="*,Auto,Auto">

                    <!--  Example Display  -->
                    <Border
                        Stroke="{StaticResource Gray950Brush}"
                        StrokeShape="{RoundRectangle CornerRadius=0}"
                        StrokeThickness="1">
                        <ContentView
                            x:Name="ControlPresenter"
                            Padding="12"
                            Background="{StaticResource Gray100}"
                            Content="{x:Bind Example}"
                            />
                    </Border>
                    <!--  Output Display  -->

