            <!--  Sample code display  -->
            <mct:Expander Grid.Row="1" Background="{StaticResource Gray500Brush}">

                <mct:Expander.Header>
                    <Label Text="Source code &lt;/&gt;" Margin="15"/>
                </mct:Expander.Header>

                <mct:Expander.Content>
                    <VerticalStackLayout
                        Padding="15"
                        Background="{StaticResource Gray100}"
                        >
                        <HorizontalStackLayout RadioButtonGroup.GroupName="Lang"
                                               RadioButtonGroup.SelectedValue="{Binding Language}">
                            <RadioButton Content="XAML" Value="0" x:Name="rXaml" />
                            <RadioButton Content="C#" Value="1" x:Name="rCsharp" IsChecked="True"/>
                        </HorizontalStackLayout>

                        <Label FormattedText="{Binding Xaml, Converter={StaticResource ColorSyntaxConverter}, ConverterParameter={x:Static cc:Languages.Xml}}"
                               IsVisible="{Binding IsChecked, Source={x:Reference rXaml}}"
                               FontSize="18"
                               />
                        <Label FormattedText="{Binding CSharp, Converter={StaticResource ColorSyntaxConverter}, ConverterParameter={x:Static cc:Languages.CSharp}}"
                               IsVisible="{Binding IsChecked, Source={x:Reference rCsharp}}"
                               FontSize="18"
                               />

