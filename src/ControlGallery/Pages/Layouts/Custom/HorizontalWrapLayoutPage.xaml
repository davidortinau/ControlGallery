<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:cl="clr-namespace:CustomLayouts"
             x:Class="ControlGallery.Pages.Layouts.HorizontalWrapLayoutPage"
             Title="Horizontal Wrap Layout">
    <ContentPage.Resources>
        <Style TargetType="Border">
            <Setter Property="WidthRequest" Value="75"/>
            <Setter Property="HeightRequest" Value="75"/>
            <Setter Property="Background" Value="{StaticResource Gray950Brush}"/>
            <Setter Property="Stroke" Value="{StaticResource Gray300Brush}"/>
            <Setter Property="StrokeThickness" Value="1"/>
            <Setter Property="StrokeShape" Value="{Rectangle}"/>
        </Style>
    </ContentPage.Resources>
    <ScrollView>
        <cl:HorizontalWrapLayout Spacing="5" Margin="15">
            <Border />
            <Border />
            <Border />
            <Border />
            <Border />
            <Border />
            <Border />
            <Border />
            <Border />
            <Border />
            <Border />
            <Border />
            <Border />
            <Border />
            <Border />
            <Border />
            <Border />
        </cl:HorizontalWrapLayout>
    </ScrollView>
</ContentPage>