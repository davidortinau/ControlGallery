<?xml version="1.0" encoding="UTF-8"?>
<ContentPage
             x:Class="ControlGallery.Pages.Layouts.AbsoluteLayouts.ProportionalDemoPage"
             Title="Proportional demo">
    <AbsoluteLayout>
        <Border Background="{StaticResource Gray100Brush}"
                 AbsoluteLayout.LayoutBounds="0.5,0,100,25"
                 AbsoluteLayout.LayoutFlags="PositionProportional" />
        <Border Background="{StaticResource Gray200Brush}"
                 AbsoluteLayout.LayoutBounds="0,0.5,25,100"
                 AbsoluteLayout.LayoutFlags="PositionProportional" />
        <Border Background="{StaticResource Gray300Brush}"
                 AbsoluteLayout.LayoutBounds="1,0.5,25,100"
                 AbsoluteLayout.LayoutFlags="PositionProportional" />
        <Border Background="{StaticResource Gray500Brush}"
                 AbsoluteLayout.LayoutBounds="0.5,1,100,25"
                 AbsoluteLayout.LayoutFlags="PositionProportional" />
        <Label Text="Centered text"
               AbsoluteLayout.LayoutBounds="0.5,0.5,110,25"
               AbsoluteLayout.LayoutFlags="PositionProportional" />
    </AbsoluteLayout>
</ContentPage>
