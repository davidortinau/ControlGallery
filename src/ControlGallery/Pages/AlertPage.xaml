<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ControlGallery.Pages.AlertPage">

    <StackLayout Margin="15,100">
        <Button Text="Display Alert" Clicked="Button_Clicked"
                    VerticalOptions="Center"
                    HorizontalOptions="Center"
                    />

        <Border HorizontalOptions="Start"
               Background="Red"
                StrokeThickness="2"
                Stroke="White"
                WidthRequest="200"
                HeightRequest="40"
               >
            <Border.StrokeShape>
                <RoundRectangle WidthRequest="200" HeightRequest="40" CornerRadius="20"/>
            </Border.StrokeShape>
            <StackLayout>
                <Label TextColor="White" Text="I'm in a stack"/>
            </StackLayout>
            
        </Border>
    </StackLayout>
</ContentPage>