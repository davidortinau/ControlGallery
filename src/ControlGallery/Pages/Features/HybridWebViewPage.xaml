<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/maui/global"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ControlGallery.Pages.HybridWebViewPage"
             Title="HybridWebView">    

    <Grid ColumnDefinitions="*" RowDefinitions="Auto,*">
        <Label
                Text="{Binding TodoAppTitle}"
                FontSize="32"
                HorizontalOptions="Center" />

        <HybridWebView Grid.Row="1" 
            MinimumHeightRequest="400"
            MinimumWidthRequest="600"
            x:Name="myHybridWebView" 
            HybridRoot="ReactTodoApp" 
            DefaultFile="index.html"
             />
    </Grid>

</ContentPage>