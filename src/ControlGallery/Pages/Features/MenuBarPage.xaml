<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:ControlGallery.Models"
             x:Class="ControlGallery.Pages.MenuBarPage"
             Title="MenuBar">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Padding="{OnPlatform iOS='30,60,30,30', Android='15', Default='30'}">
                <Label Text="MenuBar" Style="{StaticResource Headline}"/>
                <BoxView Style="{StaticResource HRule}"/>

                <Label Text="On Windows menus appear at the top of the application window. On macOS, the menus appear in the status bar."/>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>