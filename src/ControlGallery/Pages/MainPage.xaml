<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:app="clr-namespace:ControlGallery"
             xmlns:models="clr-namespace:ControlGallery.Models"
             xmlns:cl="clr-namespace:CustomLayouts"
             x:Class="ControlGallery.Pages.MainPage"
             Title=".NET Multi-platform App UI"
             Background="{StaticResource Gray200Brush}"
             >

    <ContentPage.Resources>
        <StyleSheet Source="/Resources/Styles/main.css" />

        <Shadow x:Key="BasicShadow"
                            Brush="{StaticResource Gray950Brush}"
                            Opacity="0.8"
                            Radius="10"
                            Offset="10,10"/>


        <Style TargetType="Border">
            <Setter Property="HorizontalOptions" Value="Fill"/>
            <Setter Property="Stroke" Value="{StaticResource Gray300Brush}"/>
            <Setter Property="StrokeThickness" Value="1"/>
            <Setter Property="StrokeShape">
                <RoundRectangle CornerRadius="16"/>
            </Setter>
            <Setter Property="Background" Value="{StaticResource WhiteBrush}"/>
        </Style>

        <Style TargetType="VerticalStackLayout">
            <Setter Property="Margin" Value="16"/>
            <Setter Property="Spacing" Value="16"/>
            <Setter Property="Padding" Value="1"/>
        </Style>

        <Style TargetType="HorizontalStackLayout">
            <Setter Property="Spacing" Value="16"/>
        </Style>

        <Style TargetType="Entry">
            <Setter Property="HorizontalOptions" Value="Fill"/>
            <Setter Property="MinimumWidthRequest" Value="100"/> 
        </Style>
    </ContentPage.Resources>

    <ContentPage.Content>
        <ScrollView>
            <Grid ColumnDefinitions="*,*,*,*,*,*" ColumnSpacing="32" Margin="32" >
                <VerticalStackLayout Grid.Column="5" Spacing="32" Margin="0">
                    <Border>
                        <VerticalStackLayout>
                            <Label Text="SearchBar" Style="{StaticResource Headline}"/>
                            <BoxView HeightRequest="1"/>
                            <SearchBar Placeholder="Enter keyword"/>
                        </VerticalStackLayout>
                    </Border>

                    <Border>
                        <VerticalStackLayout>
                            <Label Text="CarouselView" Style="{StaticResource Headline}"/>
                            <BoxView HeightRequest="1"/>
                            <CarouselView IndicatorView="CarouselIndicators"> 
                                <CarouselView.ItemsSource>
                                    <x:Array Type="{x:Type models:ColorBrush}">
                                        <models:ColorBrush Brush="{StaticResource PrimaryBrush}" BrushName="Primary"/>
                                        <models:ColorBrush Brush="{StaticResource SecondaryBrush}" BrushName="Secondary"/>
                                        <models:ColorBrush Brush="{StaticResource TertiaryBrush}" BrushName="Tertiary"/>
                                        <models:ColorBrush Brush="{StaticResource NeutralBrush}" BrushName="Neutral"/>
                                        <models:ColorBrush Brush="{StaticResource NeutralLighterBrush}" BrushName="NeutralLighter"/>
                                        <models:ColorBrush Brush="{StaticResource NeutralDarkerBrush}" BrushName="NeutralDarker"/>
                                        <models:ColorBrush Brush="{StaticResource BlackBrush}" BrushName="Black"/>
                                        <models:ColorBrush Brush="{StaticResource WhiteBrush}" BrushName="White"/>
                                    </x:Array>
                                </CarouselView.ItemsSource>
                                <CarouselView.ItemsLayout>
                                    <LinearItemsLayout Orientation="Horizontal"
                                                       ItemSpacing="4"
                                                       />
                                </CarouselView.ItemsLayout>
                                <CarouselView.ItemTemplate>
                                    <DataTemplate>
                                        <Border WidthRequest="80" HeightRequest="120">
                                            <Grid 
                                                RowDefinitions="80,40"
                                                WidthRequest="80" HeightRequest="120">
                                                <Rectangle HeightRequest="80" WidthRequest="80"
                                                     Fill="{Binding Brush}"/>
                                                
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </CarouselView.ItemTemplate>
                            </CarouselView>
                            <IndicatorView x:Name="CarouselIndicators"
                                           />
                        </VerticalStackLayout>
                    </Border>

                    <Border>
                        <VerticalStackLayout>
                            <Label Text="ListView" Style="{StaticResource Headline}"/>
                            <BoxView HeightRequest="1"/>
                            <ListView SeparatorVisibility="Default" SeparatorColor="{StaticResource Gray950}">
                                <ListView.ItemsSource>
                                    <x:Array Type="{x:Type x:String}">
                                        <x:String>Red</x:String>
                                        <x:String>Green</x:String>
                                        <x:String>Blue</x:String>
                                    </x:Array>
                                </ListView.ItemsSource>
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <SwitchCell Text="{Binding .}" />
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </VerticalStackLayout>
                    </Border>

                    <Border>
                        <VerticalStackLayout>
                            <Label Text="CollectionView" Style="{StaticResource Headline}"/>
                            <BoxView HeightRequest="1"/>
                            <CollectionView>
                                <CollectionView.ItemsLayout>
                                    <GridItemsLayout Span="3" Orientation="Vertical" HorizontalItemSpacing="8" VerticalItemSpacing="8"/>
                                </CollectionView.ItemsLayout>
                                <CollectionView.ItemsSource>
                                    <x:Array Type="{x:Type models:ColorBrush}">
                                        <models:ColorBrush Brush="{StaticResource PrimaryBrush}" BrushName="Primary"/>
                                        <models:ColorBrush Brush="{StaticResource SecondaryBrush}" BrushName="Secondary"/>
                                        <models:ColorBrush Brush="{StaticResource TertiaryBrush}" BrushName="Tertiary"/>
                                        <models:ColorBrush Brush="{StaticResource NeutralBrush}" BrushName="Neutral"/>
                                        <models:ColorBrush Brush="{StaticResource NeutralLighterBrush}" BrushName="NeutralLighter"/>
                                        <models:ColorBrush Brush="{StaticResource NeutralDarkerBrush}" BrushName="NeutralDarker"/>
                                        <models:ColorBrush Brush="{StaticResource BlackBrush}" BrushName="Black"/>
                                        <models:ColorBrush Brush="{StaticResource WhiteBrush}" BrushName="White"/>
                                    </x:Array>
                                </CollectionView.ItemsSource>
                                <CollectionView.ItemTemplate>
                                    <DataTemplate>
                                        <StackLayout WidthRequest="40" HeightRequest="40">
                                            <Ellipse WidthRequest="40" HeightRequest="40"
                                         HorizontalOptions="Center"
                                         Fill="{Binding Brush}"/>
                                            <!--<Label Text="{Binding BrushName}"/>
                                            <Label Text="{Binding BrushValue}"/>-->
                                        </StackLayout>
                                    </DataTemplate>
                                </CollectionView.ItemTemplate>
                            </CollectionView>
                        </VerticalStackLayout>
                    </Border>

                    <Border>
                        <VerticalStackLayout>
                            <Label Text="Bindable Layout" Style="{StaticResource Headline}"/>
                            <BoxView HeightRequest="1"/>
                            <FlexLayout Wrap="Wrap" Direction="Column">
                                <BindableLayout.ItemsSource>
                                    <x:Array Type="{x:Type models:ColorBrush}">
                                        <models:ColorBrush Brush="{StaticResource Gray100Brush}" BrushName="Primary"/>
                                        <models:ColorBrush Brush="{StaticResource Gray200Brush}" BrushName="Secondary"/>
                                        <models:ColorBrush Brush="{StaticResource Gray300Brush}" BrushName="Tertiary"/>
                                        <models:ColorBrush Brush="{StaticResource Gray500Brush}" BrushName="Neutral"/>
                                        <models:ColorBrush Brush="{StaticResource Gray900Brush}" BrushName="NeutralLighter"/>
                                        <models:ColorBrush Brush="{StaticResource Gray950Brush}" BrushName="NeutralDarker"/>
                                        <models:ColorBrush Brush="{StaticResource BlackBrush}" BrushName="Black"/>
                                    </x:Array>
                                </BindableLayout.ItemsSource>
                                <BindableLayout.ItemTemplate>
                                    <DataTemplate>
                                        <StackLayout WidthRequest="40" HeightRequest="40">
                                            <Ellipse WidthRequest="40" HeightRequest="40"
                                         HorizontalOptions="Center"
                                         Fill="{Binding Brush}"/>
                                        </StackLayout>
                                    </DataTemplate>
                                </BindableLayout.ItemTemplate>
                            </FlexLayout>
                        </VerticalStackLayout>
                    </Border>

                    <Border>
                        <VerticalStackLayout>
                            <Label Text="WebView" Style="{StaticResource Headline}"/>
                            <BoxView HeightRequest="1"/>
                            <WebView Source="https://dot.net/maui" HeightRequest="200"/>
                        </VerticalStackLayout>
                    </Border>

                    <Border>
                        <VerticalStackLayout>
                            <Label Text="AbsoluteLayout" Style="{StaticResource Headline}"/>
                            <BoxView HeightRequest="1"/>
                            <AbsoluteLayout HeightRequest="125" Margin="0,0,0,16">
                                <AbsoluteLayout.Resources>
                                    <Style TargetType="Border">
                                        <Setter Property="WidthRequest" Value="50"/>
                                        <Setter Property="HeightRequest" Value="50"/>
                                        <Setter Property="Background" Value="{StaticResource Gray950Brush}"/>
                                        <Setter Property="Stroke" Value="{StaticResource Gray300Brush}"/>
                                        <Setter Property="StrokeThickness" Value="1"/>
                                        <Setter Property="StrokeShape" Value="{Rectangle}"/>

                                    </Style>
                                </AbsoluteLayout.Resources>
                                <Border />
                                <Border AbsoluteLayout.LayoutFlags="PositionProportional" AbsoluteLayout.LayoutBounds="1,1"/>
                                <Border AbsoluteLayout.LayoutFlags="PositionProportional" AbsoluteLayout.LayoutBounds="0,1" />
                                <Border AbsoluteLayout.LayoutFlags="PositionProportional" AbsoluteLayout.LayoutBounds="1,0"/>
                                <Border Background="{StaticResource AccentBrush}" AbsoluteLayout.LayoutFlags="PositionProportional" AbsoluteLayout.LayoutBounds="0.5,0.5"/>
                            </AbsoluteLayout>
                        </VerticalStackLayout>
                    </Border>

                    <Border>
                        <VerticalStackLayout>
                            <Label Text="VerticalStackLayout" Style="{StaticResource Headline}"/>
                            <BoxView HeightRequest="1"/>
                            <VerticalStackLayout Spacing="8">
                                <VerticalStackLayout.Resources>
                                    <Style TargetType="Border">
                                        <Setter Property="WidthRequest" Value="125"/>
                                        <Setter Property="HeightRequest" Value="50"/>
                                        <Setter Property="Background" Value="{StaticResource Gray950Brush}"/>
                                        <Setter Property="Stroke" Value="{StaticResource Gray300Brush}"/>
                                        <Setter Property="StrokeThickness" Value="1"/>
                                        <Setter Property="StrokeShape" Value="{Rectangle}"/>

                                    </Style>
                                </VerticalStackLayout.Resources>
                                <Border />
                                <Border Background="{StaticResource AccentBrush}" />
                                <Border />
                                <Border />
                                <Border Background="{StaticResource AccentBrush}" />
                                <Border />

                            </VerticalStackLayout>
                        </VerticalStackLayout>
                    </Border>

                </VerticalStackLayout>
                
                <VerticalStackLayout Grid.Column="4" Spacing="32" Margin="0">
                    <Border>
                        <VerticalStackLayout>
                            <Label Text="Image" Style="{StaticResource Headline}"/>
                            <BoxView HeightRequest="1"/>
                            <Image Source="dotnet_bot.png" 
                               HeightRequest="80" WidthRequest="80"/>
                        </VerticalStackLayout>
                    </Border>

                    <Border>
                        <VerticalStackLayout>
                            <Label Text="Image Button" Style="{StaticResource Headline}"/>
                            <BoxView HeightRequest="1"/>
                            <ImageButton Source="dotnet_bot.png" 
                               HeightRequest="80" WidthRequest="80"/>
                        </VerticalStackLayout>
                    </Border>


                    <Border>
                        <VerticalStackLayout>
                            <Label Text="Label" Style="{StaticResource Headline}"/>
                            <BoxView HeightRequest="1"/>
                            <Label LineBreakMode="NoWrap" LineHeight="1.4">
                                <Label.FormattedText>
                                    <FormattedString>
                                        <Span Text="Font name: OpenSans Regular &#10;"/>
                                        <Span Text="Version: 1.00  &#10;"/>
                                        <Span Text="Digitally Signed, TrueType Outlines &#10;"/>
                                        <Span Text="abcdefghijklmnopqrstuvwxyz "/>
                                        <Span Text="abcdefghijklmnopqrstuvwxyz &#10;" TextTransform="Uppercase"/>
                                        <Span Text="1234567890.:,;'+-*/=  &#10;"/>
                                        <Span Text="12 The quick brown fox jumps over the lazy dog. 1234567890 &#10;" FontSize="12"/>
                                        <Span Text="18 The quick brown fox jumps over the lazy dog. 1234567890 &#10;" FontSize="18"/>
                                        <Span Text="24 The quick brown fox jumps over the lazy dog. 1234567890 &#10;" FontSize="24"/>
                                        <Span Text="36 The quick brown fox jumps over the lazy dog. 1234567890 &#10;" FontSize="36"/>
                                        <Span Text="48 The quick brown fox jumps over the lazy dog. 1234567890 &#10;" FontSize="48"/>
                                        <Span Text="60 The quick brown fox jumps over the lazy dog. 1234567890 &#10;" FontSize="60"/>
                                        <Span Text="72 The quick brown fox jumps over the lazy dog. 1234567890 " FontSize="72" >
                                            <Span.GestureRecognizers>
                                                <TapGestureRecognizer Command="{Binding TapCommand}" CommandParameter="https://google.com" />
                                            </Span.GestureRecognizers>
                                        </Span>
                                    </FormattedString>
                                </Label.FormattedText>
                            </Label>
                        </VerticalStackLayout>
                    </Border>

                    <Border>
                        <VerticalStackLayout>
                            <Label Text="Radio Button" Style="{StaticResource Headline}"/>
                            <BoxView HeightRequest="1"/>
                            <HorizontalStackLayout RadioButtonGroup.GroupName="EnabledButtons">
                                <RadioButton Content="First" IsChecked="True" />
                                <RadioButton Content="Second" />
                                <RadioButton Content="Third" />
                            </HorizontalStackLayout>
                            <Label Text="Disabled"/>
                            <HorizontalStackLayout RadioButtonGroup.GroupName="DisabledButtons">
                                <RadioButton Content="First" IsChecked="True" IsEnabled="False" />
                                <RadioButton Content="Second" IsEnabled="False" />
                                <RadioButton Content="Third" IsEnabled="False" />
                            </HorizontalStackLayout>
                        </VerticalStackLayout>
                    </Border>

                    <Border>
                        <VerticalStackLayout>
                            <Label Text="Frame" Style="{StaticResource Headline}"/>
                            <BoxView HeightRequest="1"/>
                            <Frame 
                               BackgroundColor="{StaticResource Gray100}"
                               BorderColor="Transparent"
                               CornerRadius="16" 
                               Padding="16"
                               VerticalOptions="Start"
                               HorizontalOptions="Start">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="75" />
                                        <RowDefinition Height="4" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>

                                    <Label 
                                       Text="Card Title"
                                       FontAttributes="Bold"
                                       FontSize="Large"
                                       VerticalTextAlignment="Center"
                                       HorizontalTextAlignment="Start" />
                                    <BoxView Grid.Row="1"
                                         Grid.ColumnSpan="2"
                                         BackgroundColor="{StaticResource Gray950}"
                                         HeightRequest="1"
                                         HorizontalOptions="Fill" />
                                    <Label Grid.Row="2"
                                       Grid.ColumnSpan="2"
                                       Text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nulla elit dolor, convallis non interdum."
                                       VerticalTextAlignment="Start"
                                       VerticalOptions="Fill"
                                       HorizontalOptions="Fill" />

                                </Grid>
                            </Frame>
                        </VerticalStackLayout>
                    </Border>

                    <Border>
                        <VerticalStackLayout>
                            <Label Text="StackLayout" Style="{StaticResource Headline}"/>
                            <BoxView HeightRequest="1"/>
                            <StackLayout Spacing="8">
                                <StackLayout.Resources>
                                    <Style TargetType="Border">
                                        <Setter Property="WidthRequest" Value="150"/>
                                        <Setter Property="HeightRequest" Value="50"/>
                                        <Setter Property="Background" Value="{StaticResource Gray950Brush}"/>
                                        <Setter Property="Stroke" Value="{StaticResource Gray300Brush}"/>
                                        <Setter Property="StrokeThickness" Value="1"/>
                                        <Setter Property="StrokeShape" Value="{Rectangle}"/>

                                    </Style>
                                </StackLayout.Resources>
                                <Border />
                                <Border />
                                <Border />
                                <Border />
                                <Border />
                                <Border />

                            </StackLayout>
                        </VerticalStackLayout>
                    </Border>
                </VerticalStackLayout>

                <VerticalStackLayout Grid.Column="3" Spacing="32" Margin="0">
                    <Border>
                        <VerticalStackLayout>
                            <Label Text="Shapes" Style="{StaticResource Headline}"/>
                            <BoxView HeightRequest="1"/>
                            <FlexLayout Wrap="Wrap" AlignContent="SpaceEvenly" JustifyContent="SpaceEvenly">
                                <Ellipse WidthRequest="50" HeightRequest="50"
                                    Fill="{StaticResource PrimaryBrush}"/>
                                <Rectangle WidthRequest="50" HeightRequest="50"
                                    Fill="{StaticResource PrimaryBrush}"/>

                                <Polygon Fill="{StaticResource PrimaryBrush}"
                                    Points="0 36 0 13.5 13.5 0 36 0 50 13.5 50 36 36 50 13.5 50"/>

                                <Polygon Fill="{StaticResource PrimaryBrush}"
                                    Points="0 14 12 0 38 0 50 14 25 50"/>

                                <Polygon Fill="{StaticResource PrimaryBrush}"
                                    Margin="0,10"
                                    Points="24 0 47.7764129 17.2745751 38.6946313 45.2254249 9.30536869 45.2254249 0.223587093 17.2745751"/>

                                <Grid HeightRequest="50" WidthRequest="50" FlexLayout.AlignSelf="Start">
                                    <Polygon Fill="#512BD4" 
                                        Points="0 0 0 50 25 25"/>
                                    <Polygon Fill="#DFD8F7" 
                                        Points="0 0 50 0 25 25"/>
                                    <Polygon Fill="#2B0B98" 
                                        Points="50 0 50 50 25 25" HorizontalOptions="End"/>
                                    <Polygon Fill="#E5E5E1" 
                                        Points="0 50 25 25 50 50" VerticalOptions="End"/>
                                </Grid>

                                <Polygon Fill="{StaticResource PrimaryBrush}"
                                    Margin="0,10"
                                    Points="8 25 25 0 42 25 25 50"/>

                                <Path 
                                    Fill="{StaticResource PrimaryBrush}"
                                    Data="M50,0 L50,50 L25,50 C11.1928813,50 0,38.8071187 0,25 C0,11.3309524 10.9701429,0.224119049 24.5865793,0.00334928573 L25,0 L50,0 Z" />

                            </FlexLayout>
                        </VerticalStackLayout>
                    </Border>
                    <Border>
                        <VerticalStackLayout>
                            <Label Text="Switch" Style="{StaticResource Headline}"/>
                            <BoxView HeightRequest="1"/>
                            <Label Text="Default" />
                            
                            <Switch/>
                            <Switch IsToggled="True"/>

                            <Label Text="Disabled and untoggled" />
                            <Switch IsEnabled="False"/>

                            <Label Text="Disabled and toggled" />
                            <Switch IsToggled="True" IsEnabled="False"/>

                            <Label Text="OnColor" />
                            <Switch IsToggled="True" OnColor="{StaticResource Accent}"/>

                            <Label Text="ThumbColor" />
                            <Switch IsToggled="True" ThumbColor="{StaticResource Accent}" />
                        </VerticalStackLayout>
                    </Border>

                    <Border>
                        <VerticalStackLayout>
                            <Label Text="Date Picker" Style="{StaticResource Headline}"/>
                            <BoxView HeightRequest="1"/>
                            <DatePicker/>
                        </VerticalStackLayout>
                    </Border>
                    <Border>
                        <VerticalStackLayout>
                            <Label Text="Time Picker" Style="{StaticResource Headline}"/>
                            <BoxView HeightRequest="1"/>
                            <TimePicker/>
                        </VerticalStackLayout>
                    </Border>

                    <Border>
                        <VerticalStackLayout>
                            <Label Text="Stepper" Style="{StaticResource Headline}"/>
                            <BoxView HeightRequest="1"/>

                            <Label Text="Default" />
                            <StackLayout Orientation="Horizontal">
                                <Stepper/>
                                <Stepper IsEnabled="False"/>
                            </StackLayout>


                            <Label Text="BackgroundColor" />
                            <StackLayout Orientation="Horizontal">
                                <Stepper BackgroundColor="{StaticResource Secondary}"/>
                                <Stepper BackgroundColor="{StaticResource Secondary}" 
                                         IsEnabled="False"/>
                            </StackLayout>

                            <Label Text="BackgroundColor" />
                            <StackLayout Orientation="Horizontal">
                                <Stepper Increment="2"/>
                                <Stepper BackgroundColor="{StaticResource Secondary}" 
                                         IsEnabled="False"/>
                            </StackLayout>
                        </VerticalStackLayout>
                    </Border>

                    <Border>
                        <VerticalStackLayout>
                            <Label Text="FlexLayout" Style="{StaticResource Headline}"/>
                            <BoxView HeightRequest="1"/>
                            <FlexLayout Direction="Row" JustifyContent="SpaceAround">
                                <FlexLayout.Resources>
                                    <Style TargetType="Border">
                                        <Setter Property="WidthRequest" Value="75"/>
                                        <Setter Property="HeightRequest" Value="75"/>
                                        <Setter Property="Background" Value="{StaticResource Gray950Brush}"/>
                                        <Setter Property="Stroke" Value="{StaticResource Gray300Brush}"/>
                                        <Setter Property="StrokeThickness" Value="1"/>
                                        <Setter Property="StrokeShape" Value="{Rectangle}"/>
                                        
                                    </Style>
                                </FlexLayout.Resources>
                                <Border />
                                <Border Background="{StaticResource AccentBrush}" />
                                <Border />

                            </FlexLayout>
                        </VerticalStackLayout>
                    </Border>

                    <Border>
                        <VerticalStackLayout>
                            <Label Text="HorizontaStackLayout" Style="{StaticResource Headline}"/>
                            <BoxView HeightRequest="1"/>
                            <HorizontalStackLayout Spacing="8">
                                <HorizontalStackLayout.Resources>
                                    <Style TargetType="Border">
                                        <Setter Property="WidthRequest" Value="75"/>
                                        <Setter Property="HeightRequest" Value="125"/>
                                        <Setter Property="Background" Value="{StaticResource Gray950Brush}"/>
                                        <Setter Property="Stroke" Value="{StaticResource Gray300Brush}"/>
                                        <Setter Property="StrokeThickness" Value="1"/>
                                        <Setter Property="StrokeShape" Value="{Rectangle}"/>

                                    </Style>
                                </HorizontalStackLayout.Resources>
                                <Border />
                                <Border Background="{StaticResource AccentBrush}" />
                                <Border />
                                <Border />
                                <Border Background="{StaticResource AccentBrush}" />
                                <Border />

                            </HorizontalStackLayout>
                        </VerticalStackLayout>
                    </Border>

                </VerticalStackLayout>

                <VerticalStackLayout Grid.Column="2" Spacing="32" Margin="0">
                    <Border>
                        <VerticalStackLayout>
                            <Label Text="Progress Bar" Style="{StaticResource Headline}"/>
                            <BoxView HeightRequest="1"/>
                            <Label Text="Default" Style="{StaticResource Headline}"/>
                
                            <ProgressBar Progress="0.5"/>
                            <ProgressBar x:Name="progressBar" />
            
                            <Label Text="Styled" Style="{StaticResource Headline}"/>
            
                            <Label Text="HeightRequest" />
                            <ProgressBar HeightRequest="20" Progress="0.2"/>
            
                            <Label Text="ProgressColor" />
                            <ProgressBar HeightRequest="20" Progress="0.3" 
                                ProgressColor="{StaticResource Primary}"/>

                            <Label Text="BackgroundColor"/>
                            <ProgressBar HeightRequest="20" 
                                         Progress="0.4" 
                                         BackgroundColor="{StaticResource Secondary}"
                                         ProgressColor="{StaticResource Primary}"/>
                            </VerticalStackLayout>
                        </Border>

                    <Border>
                        <VerticalStackLayout>
                            <Label Text="Shadow" Style="{StaticResource Headline}"/>
                            <BoxView HeightRequest="1"/>
                            <Label Text="On a label"/>
                            <Label Text="I Have A Shadow" 
                                Shadow="{StaticResource BasicShadow}"/>

                            <Label Text="Image"/>

                            <Image Source="https://aka.ms/campus.jpg"
                               Aspect="AspectFill"
                               HeightRequest="120"
                               WidthRequest="120" Margin="0,0,0,30"
                               Shadow="{StaticResource BasicShadow}"/>

                        </VerticalStackLayout>
                    </Border>

                    <Border>
                        <VerticalStackLayout>
                            <Label Text="Slider" Style="{StaticResource Headline}"/>
                            <BoxView HeightRequest="1"/>
                            <Label Text="Default" />
                            <Slider/>

                            <Label Text="MinimumTrackColor" />
                            <Slider MinimumTrackColor="{StaticResource Neutral}" Value="0.5"/>

                            <Label Text="MaximumTrackColor" />
                            <Slider MaximumTrackColor="{StaticResource Neutral}" Value="0.5"/>

                            <Label Text="ThumbColor" />
                            <Slider ThumbColor="{StaticResource Primary}" Value="0.5"/>
                        </VerticalStackLayout>
                    </Border>


                    <Border>
                        <VerticalStackLayout>
                            <Label Text="Picker" Style="{StaticResource Headline}"/>
                            <BoxView HeightRequest="1"/>
                            <Picker Title="Select a color">
                                <Picker.ItemsSource>
                                    <x:Array Type="{x:Type x:String}">
                                        <x:String>Red</x:String>
                                        <x:String>Green</x:String>
                                        <x:String>Blue</x:String>
                                    </x:Array>
                                </Picker.ItemsSource>
                            </Picker>
                        </VerticalStackLayout>
                    </Border>

                    <Border>
                        <VerticalStackLayout>
                            <Label Text="Cascade Layout" Style="{StaticResource Headline}"/>
                            <BoxView HeightRequest="1"/>
                            <cl:CascadeLayout Spacing="16">
                                <cl:CascadeLayout.Resources>
                                    <Style TargetType="Border">
                                        <Setter Property="WidthRequest" Value="75"/>
                                        <Setter Property="HeightRequest" Value="75"/>
                                        <Setter Property="Background" Value="{StaticResource Gray950Brush}"/>
                                        <Setter Property="Stroke" Value="{StaticResource Gray300Brush}"/>
                                        <Setter Property="StrokeThickness" Value="1"/>
                                        <Setter Property="StrokeShape" Value="{Rectangle}"/>
                                    </Style>
                                </cl:CascadeLayout.Resources>
                                <Border />
                                <Border />
                                <Border />
                                <Border />
                                <Border />
                                <Border />
                                <Border />
                                <Border />
                                <Border />
                                <Border />
                                <Border />
                                <Border />
                                <Border />
                                <Border />
                                <Border />
                                <Border />
                            </cl:CascadeLayout>
                        </VerticalStackLayout>
                    </Border>
                </VerticalStackLayout>
                    

                <VerticalStackLayout Grid.Column="1" Spacing="32" Margin="0">
                    <Border>
                        <VerticalStackLayout>
                            <Label Text="Editor" Style="{StaticResource Headline}"/>
                            <BoxView HeightRequest="1"/>
                            <Label Text="Default" Style="{StaticResource Headline}"/>
                            <Editor/>

                            <Label Text="Placeholder" Style="{StaticResource Headline}"/>
                            <Editor Placeholder="Placeholder"/>
            
                            <Label Text="Disabled" Style="{StaticResource Headline}"/>
                            <Editor Text="I am disabled" IsEnabled="False"/>

                            <Label Text="Read-only" Style="{StaticResource Headline}"/>
                            <Editor Text="I am read only" IsReadOnly="True"/>

                            <Label Text="With error message" Style="{StaticResource Headline}"/>
                            <Editor />

                            <Label Text="Multiline" Style="{StaticResource Headline}"/>
                            <Label Text="AutoSize" StyleClass="Subhead"/>
                            <Editor Placeholder="Placeholder" AutoSize="TextChanges"/>

                            <Label Text="Fixed Height" StyleClass="Subhead"/>
                            <Editor Placeholder="Placeholder" HeightRequest="100"/>

                        </VerticalStackLayout>
                    </Border>

                    <Border>
                        <VerticalStackLayout>
                            <Label Text="Entry" Style="{StaticResource Headline}"/>
                            <BoxView HeightRequest="1"/>
                            <Label Text="Basic" />
                            <HorizontalStackLayout Spacing="32">
                                <Entry/>
                                <Entry IsEnabled="False"/>
                            </HorizontalStackLayout>

                            <Label Text="With Placeholder" />
                            <HorizontalStackLayout>
                                <Entry Placeholder="Placeholder"/>
                                <Entry Placeholder="Placeholder color" 
                                    PlaceholderColor="{StaticResource Accent}"/>
                            </HorizontalStackLayout>
            
                            <Label Text="Password" />
                            <HorizontalStackLayout>
                                <Entry IsPassword="True" />
                                <Entry IsPassword="True" IsEnabled="False"/>
