<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
             x:Class="ControlGallery.Pages.TableViewPage"
             Title="TableView">
    <ContentPage.Content>
        <ScrollView>
            <VerticalStackLayout Spacing="8" Margin="15">
                <BindableLayout.ItemsSource>
                    <x:Array Type="{x:Type NavItem}">
                        <NavItem Title="Data Intent"
                                   Destination="{x:Type DataIntentXaml}"/>
                        <NavItem Title="Entry Cell"
                                   Destination="{x:Type EntryCellDemoXaml}"/>
                        <NavItem Title="Form Intent"
                                   Destination="{x:Type FormIntentXaml}"/>
                        <NavItem Title="Menu Intent"
                                   Destination="{x:Type MenuIntentXaml}"/>
                        <NavItem Title="Settings Intent"
                                   Destination="{x:Type SettingsIntentXaml}"/>
                        <NavItem Title="Switch Cell"
                                   Destination="{x:Type SwitchCellDemoXaml}"/>
                        
                    </x:Array>
                </BindableLayout.ItemsSource>
                <BindableLayout.ItemTemplate>
                    <DataTemplate>
                        <Button 
                            Style="{StaticResource BorderlessButton}"
                            Text="{Binding Title}"
                            Command="{Binding NavigateTo}"
                        />
                    </DataTemplate>
                </BindableLayout.ItemTemplate>
            </VerticalStackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>