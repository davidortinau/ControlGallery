<?xml version="1.0" encoding="UTF-8"?>
<ContentPage
             x:Class="CollectionViewDemos.Views.VerticalListSingleSelectionPage"
             Title="Vertical list (single selection)">
    <Grid Margin="20" RowDefinitions="Auto,Auto,*" ColumnDefinitions="Auto,Auto">
        <Label Text="Previous selected item:" />
        <Label x:Name="previousSelectedItemLabel"
                Grid.Column="1" />
        <Label Grid.Row="1"
                Text="Current selected item:" />
        <Label x:Name="currentSelectedItemLabel"
                Grid.Row="1"
                Grid.Column="1" />    
        <CollectionView ItemsSource="{Binding Monkeys}"
                        SelectionMode="Single"
                        SelectionChanged="OnCollectionViewSelectionChanged"
                        Grid.Row="2"
                        Grid.ColumnSpan="2">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid Padding="10" ColumnSpacing="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <Image Grid.RowSpan="2" 
                               Source="{Binding ImageUrl}" 
                               Aspect="AspectFill"
                               HeightRequest="60" 
                               WidthRequest="60" />
                        <Label Grid.Column="1" 
                               Text="{Binding Name}" 
                               FontAttributes="Bold" />
                        <Label Grid.Row="1"
                               Grid.Column="1" 
                               Text="{Binding Location}"
                               FontAttributes="Italic" 
                               VerticalOptions="End" />
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>
