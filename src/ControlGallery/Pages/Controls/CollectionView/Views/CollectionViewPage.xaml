<?xml version="1.0" encoding="utf-8"?>
<ContentPage
             x:Class="CollectionViewDemos.Views.CollectionViewPage"
             Title="CollectionView Demos">
    <ScrollView>
    <TableView Intent="Menu">
        <TableRoot>
            <TableSection Title="Layout">
                <TextCell Text="Vertical list"
                          Detail="Text" 
                          Command="{Binding NavigateCommand}"
                          CommandParameter="{x:Type VerticalListTextPage}" />
                <TextCell Text="Horizontal list"
                          Detail="Text"
                          Command="{Binding NavigateCommand}"
                          CommandParameter="{x:Type HorizontalListTextPage}" />
                <TextCell Text="Vertical grid"
                          Detail="Text"
                          Command="{Binding NavigateCommand}"
                          CommandParameter="{x:Type VerticalGridTextPage}" />
                <TextCell Text="Horizontal grid"
                          Detail="Text"
                          Command="{Binding NavigateCommand}"
                          CommandParameter="{x:Type HorizontalGridTextPage}" />
                <TextCell Text="Vertical list"
                          Detail="DataTemplate"
                          Command="{Binding NavigateCommand}"
                          CommandParameter="{x:Type VerticalListPage}" />
                <TextCell Text="Horizontal list"
                          Detail="DataTemplate"
                          Command="{Binding NavigateCommand}"
                          CommandParameter="{x:Type HorizontalListPage}" />
                <TextCell Text="Vertical grid"
                          Detail="DataTemplate"
                          Command="{Binding NavigateCommand}"
                          CommandParameter="{x:Type VerticalGridPage}" />
                <TextCell Text="Horizontal grid"
                          Detail="DataTemplate"
                          Command="{Binding NavigateCommand}"
                          CommandParameter="{x:Type HorizontalGridPage}" />
                <TextCell Text="Vertical list"
                          Detail="Data template selector"
                          Command="{Binding NavigateCommand}"
                          CommandParameter="{x:Type VerticalListDataTemplateSelectorPage}" />
                <TextCell Text="Vertical list"
                          Detail="RTL FlowDirection"
                          Command="{Binding NavigateCommand}"
                          CommandParameter="{x:Type VerticalListRTLPage}" />
            </TableSection>
            <TableSection Title="Spacing">
                <TextCell Text="Vertical list"
                          Detail="ItemSpacing"
                          Command="{Binding NavigateCommand}"
                          CommandParameter="{x:Type VerticalListSpacingPage}" />
                <TextCell Text="Horizontal list"
                          Detail="ItemSpacing"
                          Command="{Binding NavigateCommand}"
                          CommandParameter="{x:Type HorizontalListSpacingPage}" />
                <TextCell Text="Vertical grid"
                          Detail="HorizontalItemSpacing and VerticalItemSpacing"
                          Command="{Binding NavigateCommand}"
                          CommandParameter="{x:Type VerticalGridSpacingPage}" />
                <TextCell Text="Horizontal grid"
                          Detail="HorizontalItemSpacing and VerticalItemSpacing"
                          Command="{Binding NavigateCommand}"
                          CommandParameter="{x:Type HorizontalGridSpacingPage}" />
            </TableSection>
            <TableSection Title="Sizing">
                <TextCell Text="Variable size items"
                          Detail="Vertical list"
                          Command="{Binding NavigateCommand}"
                          CommandParameter="{x:Type VerticalListVariableSizeItemsPage}" />
                <TextCell Text="Dynamic item sizing"
                          Detail="Vertical list"
                          Command="{Binding NavigateCommand}"
                          CommandParameter="{x:Type VerticalListDynamicSizeItemsPage}" />
            </TableSection>
            <TableSection Title="Selection">
                <TextCell Text="Single"
                          Detail="Vertical list"
                          Command="{Binding NavigateCommand}"
                          CommandParameter="{x:Type VerticalListSingleSelectionPage}" />
                <TextCell Text="Multiple"
                          Detail="Vertical list"
                          Command="{Binding NavigateCommand}"
                          CommandParameter="{x:Type VerticalListMultipleSelectionPage}" />
                <TextCell Text="Single pre-selection"
                          Detail="Vertical list"
                          Command="{Binding NavigateCommand}"
                          CommandParameter="{x:Type VerticalListSinglePreSelectionPage}" />
                <TextCell Text="Multiple pre-selection"
                          Detail="Vertical list"
                          Command="{Binding NavigateCommand}"
                          CommandParameter="{x:Type VerticalListMultiplePreSelectionPage}" />
                <TextCell Text="Selection color"
                          Detail="Vertical list"
                          Command="{Binding NavigateCommand}"
                          CommandParameter="{x:Type VerticalListSelectionColorPage}" />
            </TableSection>
            <TableSection Title="EmptyView">
                <TextCell Text="EmptyView string"
                          Detail="ItemsSource Null"
                          Command="{Binding NavigateCommand}"
                          CommandParameter="{x:Type EmptyViewNullPage}" />
                <TextCell Text="EmptyView string"
                          Detail="Load simulation"
                          Command="{Binding NavigateCommand}"
                          CommandParameter="{x:Type EmptyViewLoadSimulationPage}" />
                <TextCell Text="EmptyView string"
                          Detail="Filtering"
                          Command="{Binding NavigateCommand}"
                          CommandParameter="{x:Type EmptyViewFilteredPage}" />
                <TextCell Text="EmptyView with multiple views"
                          Detail="Filtering"
                          Command="{Binding NavigateCommand}"
                          CommandParameter="{x:Type EmptyViewWithViewsFilteredPage}" />
                <TextCell Text="EmptyView with EmptyViewTemplate"
                          Detail="Filtering"
                          Command="{Binding NavigateCommand}"
                          CommandParameter="{x:Type EmptyViewTemplatePage}" />
                <TextCell Text="EmptyView with EmptyViewTemplate"
                          Detail="Data template selector"
                          Command="{Binding NavigateCommand}"
                          CommandParameter="{x:Type EmptyViewDataTemplateSelectorPage}" />
                <TextCell Text="EmptyView swap"
                          Detail="Filtering"
                          Command="{Binding NavigateCommand}"
                          CommandParameter="{x:Type EmptyViewSwapPage}" />
            </TableSection>
            <TableSection Title="Grouping">
                <TextCell Text="Grouping"
                          Detail="Vertical list with DataTemplates"
                          Command="{Binding NavigateCommand}"
                          CommandParameter="{x:Type VerticalListGroupingPage}" />
                <TextCell Text="Grouping"
                          Detail="Vertical list without DataTemplates"
                          Command="{Binding NavigateCommand}"
                          CommandParameter="{x:Type VerticalListTextGroupingPage}" />
                <TextCell Text="Grouping including empty groups"
                          Detail="Vertical list with DataTemplates"
                          Command="{Binding NavigateCommand}"
                          CommandParameter="{x:Type VerticalListEmptyGroupsPage}" />
                <TextCell Text="Grouping with variable sized items"
                          Detail="Vertical list with DataTemplates"
                          Command="{Binding NavigateCommand}"
                          CommandParameter="{x:Type VerticalListGroupingVariableSizeItemsPage}" />
            </TableSection>
            <TableSection Title="Pull to Refresh">
                <TextCell Text="Pull to refresh using RefreshView"
                          Detail="Vertical list"
                          Command="{Binding NavigateCommand}"
                          CommandParameter="{x:Type VerticalListPullToRefreshPage}" />
                <TextCell Text="Pull to refresh using RefreshView"
                          Detail="Horizontal grid"
                          Command="{Binding NavigateCommand}"
                          CommandParameter="{x:Type HorizontalGridPullToRefreshPage}" />
            </TableSection>
            <TableSection Title="Headers and Footers">
                <TextCell Text="String header and footer"
                          Detail="Vertical list"
                          Command="{Binding NavigateCommand}"
                          CommandParameter="{x:Type VerticalListHeaderFooterStringPage}" />
                <TextCell Text="DataTemplate header and footer"
                          Detail="Vertical list"
                          Command="{Binding NavigateCommand}"
                          CommandParameter="{x:Type VerticalListHeaderFooterDataTemplatePage}" />
                <TextCell Text="View header and footer"
                          Detail="Vertical list"
                          Command="{Binding NavigateCommand}"
                          CommandParameter="{x:Type VerticalListHeaderFooterViewPage}" />
                <TextCell Text="View header and footer"
                          Detail="Horizontal grid"
                          Command="{Binding NavigateCommand}"
                          CommandParameter="{x:Type HorizontalGridHeaderFooterViewPage}" />
            </TableSection>
            <TableSection Title="Scrolling">
                <TextCell Text="Scroll by index"
                          Detail="ScrollTo"
                          Command="{Binding NavigateCommand}"
                          CommandParameter="{x:Type ScrollToByIndexPage}" />
                <TextCell Text="Scroll by object"
                          Detail="ScrollTo"
                          Command="{Binding NavigateCommand}"
                          CommandParameter="{x:Type ScrollToByObjectPage}" />
                <TextCell Text="Scroll by index"
                          Detail="Grouped data"
                          Command="{Binding NavigateCommand}"
                          CommandParameter="{x:Type ScrollToByIndexWithGroupingPage}" />
                <TextCell Text="Scroll by object"
                          Detail="Grouped data"
                          Command="{Binding NavigateCommand}"
                          CommandParameter="{x:Type ScrollToByObjectWithGroupingPage}" />
                <TextCell Text="Snap points"
                          Detail="Type and alignment"
                          Command="{Binding NavigateCommand}"
                          CommandParameter="{x:Type VerticalListSnapPointsPage}" />
                <TextCell Text="Scroll mode when adding items"
                          Detail="ItemsUpdatingScrollMode"
                          Command="{Binding  NavigateCommand}"
                          CommandParameter="{x:Type ItemsUpdatingScrollModePage}" />
                <TextCell Text="Incremental loading on scroll"
                          Detail="RemainingItemsThreshold"
                          Command="{Binding NavigateCommand}"
                          CommandParameter="{x:Type IncrementalLoadingPage}" />
            </TableSection>
            <TableSection Title="Swipe">
                <TextCell Text="Context menu items"
                          Detail="Vertical list"
                          Command="{Binding NavigateCommand}"
                          CommandParameter="{x:Type VerticalListSwipeContextItemsPage}" />
            </TableSection>
        </TableRoot>
    </TableView>
    </ScrollView>
</ContentPage>