<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/maui/global"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ControlGallery.Pages.SearchBarPage"
             Title="SearchBar">

    <ScrollView>
        <StackLayout Padding="{OnPlatform iOS='30,60,30,30', Android='15', Default='30'}">
            <SearchBar />
            <SearchBar
                Text="Start VerticalTextAlignment"
                VerticalTextAlignment="Start" />
            <SearchBar
                Text="Center VerticalTextAlignment"
                VerticalTextAlignment="Center" />
            <SearchBar
                Text="End VerticalTextAlignment"
                VerticalTextAlignment="End" />
        </StackLayout>
    </ScrollView>

</ContentPage>