<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/maui/global"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ControlGallery.Pages.VirtualListViewPage"
             Title="VirtualListView">
    
    <ContentPage.Content>
        <VirtualListView Adapter="{Binding Adapter}">
            <VirtualListView.EmptyView>
                <Grid>
                    <Label HorizontalOptions="Center" VerticalOptions="Center" Text="EMPTY!!!" />
                </Grid>
            </VirtualListView.EmptyView>
            <VirtualListView.GlobalHeader>
                <Label Text="Monkeys" Margin="10"/>
            </VirtualListView.GlobalHeader>
            
            <VirtualListView.ItemTemplate>
                <DataTemplate>
                    <MonkeyViewCell/>
                </DataTemplate>
            </VirtualListView.ItemTemplate>
        </VirtualListView>
        
    </ContentPage.Content>
</ContentPage>