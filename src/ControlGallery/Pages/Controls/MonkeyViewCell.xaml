<?xml version="1.0" encoding="UTF-8"?>
<VirtualViewCell
    xmlns="http://schemas.microsoft.com/dotnet/maui/global"xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ControlGallery.Pages.MonkeyViewCell"
    x:DataType="local:Monkey"
    x:Name="self">
    <Border Margin="10,0,10,10">
        <Grid ColumnDefinitions="Auto,*" 
              RowDefinitions="Auto,Auto"
              ColumnSpacing="10" Margin="5">
            <Image Source="{Binding ImageUrl}" 
                   Aspect="AspectFill"
                   WidthRequest="60" 
                   HeightRequest="60" 
                   Grid.RowSpan="2"
            />
            <Label Grid.Column="1" 
                   Text="{Binding Name}" VerticalOptions="Center"
                   FontAttributes="Bold" />
            <Label Grid.Column="1" Grid.Row="1"
                   Text="{Binding Location}" VerticalOptions="Center"
                   FontAttributes="Bold" />
                            
        </Grid>
    </Border>
</VirtualViewCell>