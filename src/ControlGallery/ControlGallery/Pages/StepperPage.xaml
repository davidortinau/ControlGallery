<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ControlGallery.Pages.StepperPage"
             Title="Stepper">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout>
                <Label Text="Default" StyleClass="Headline"/>
                <StackLayout Orientation="Horizontal">
                    <Stepper/>
                    <Stepper IsEnabled="False"/>
                </StackLayout>

                <Label Text="Styled" StyleClass="Headline"/>

                <Label Text="BackgroundColor" StyleClass="Subhead"/>
                <StackLayout Orientation="Horizontal">
                    <Stepper BackgroundColor="{StaticResource Secondary}"/>
                    <Stepper BackgroundColor="{StaticResource Secondary}" 
                             IsEnabled="False"/>
                </StackLayout>

                <Label Text="BackgroundColor" StyleClass="Subhead"/>
                <StackLayout Orientation="Horizontal">
                    <Stepper Increment="2"/>
                    <Stepper BackgroundColor="{StaticResource Secondary}" 
                             IsEnabled="False"/>
                </StackLayout>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>